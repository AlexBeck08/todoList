<%- include('partials/forms-header') %>

<div class="container mt-3">
  <div class="card">
    <div class="card-body">
      <form action="/<%= user._id %>/boards/<%=boardIndex%>?_method=PATCH" method="Post">
        <div class="form-group">
          <label for="boardTitle">Board Name</label>
          <input type="text" class="form-control" name="boardTitle" id="boardTitle" value="<%= boards[boardIndex].boardTitle %>">
        </div>
        <div class="form-group">
          <label for="boardDescription">Board Description</label>
          <input type="text" name="boardDescription" class="form-control" id="boardDescription" value="<%= boards[boardIndex].boardDescription %>">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

    </div>
  </div>
</div>

<%- include('partials/forms-footer') %>