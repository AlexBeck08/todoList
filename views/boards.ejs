<%- include('partials/forms-header') %>

<h1>Future Boards Page</h1>

<% if (user) { %>
<h2>
  What's Up,
  <%= user.name %>?
</h2>
<% } %>

<div class="container">
  <div class="row">

    <% for(i=0; i < boards.length; i++) { %>
    <div class="card mx-auto my-3" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title centered">
          <%= boards[i].boardTitle %>
        </h5>
        <p class="card-text centered">
          <%= boards[i].boardDescription %>
        </p>
        <div class="container">
          <div class="row">
            <div class="col-5 m-auto">
              <a class="btn card-link btn-primary btn-block" href="/<%= user._id %>/boards/<%=i%>"><i class="fas fa-external-link-square-alt"></i></a>
            </div>
            <div class="col-5 m-auto">
              <a class="btn card-link btn-primary btn-block" href="/<%= user._id %>/boards/<%=i%>/edit"><i class="fas fa-cog"></i></a>
            </div>

          </div>

        </div>
      </div>
    </div>
    <% } %>

  </div>
  <a class="btn btn-primary btn-block mt-4" data-toggle="collapse" href="#newBoardForm" role="button" aria-expanded="false" aria-controls="newBoardForm">Add New Board</a>
</div>

<div class="collapse" id="newBoardForm">
  <div class="container mt-3">
    <div class="card">
      <div class="card-body">
        <form action="/<%= user._id %>/boards" method="POST">
          <div class="form-group">
            <label for="boardTitle">Board Name</label>
            <input type="text" class="form-control" name="boardTitle" id="boardTitle" placeholder="Enter Title">
          </div>
          <div class="form-group">
            <label for="boardDescription">Board Description</label>
            <input type="text" name="boardDescription" class="form-control" id="boardDescription" placeholder="Board Description">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>


<%- include('partials/forms-footer') %>